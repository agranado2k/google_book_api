<div class="row">
  <h1>Book's Search Page</h1>
</div>
<div class="row">
  <%= form_tag("/books", method: "get", id: "bookForm") do %>
    <%= hidden_field_tag(:currentPage, params[:currentPage]) %>
    <%= text_field_tag(:search_field, params[:search_field]) %>
    <%= submit_tag("Search") %>
  <% end %>
</div>
<% if @books.empty? %>
  <div class="row" style="margin-top: 10px !important;">
    <span>No results</span>
  </div>
<% else %>
  <div class="row" style="margin-top: 10px !important;">
    <%= render "shared/pagination" %>
  </div>
  <div class="row">
    <ul class="list-group">
      <% @books.each do |book| %>
        <li class="list-group-item">
          <div class="media">
            <a href="<%= book.info_link %>" />
              <img src="<%= book.img_link %>" class="mr-3" style="width: 64px; height:84px;"  alt="<%= book.title %>">
            </a>
            <div class="media-body">
              <h5 class="mt-0"><%= book.title %></h5>
              <p class="mb-1">Author: <%= book.author %></p>
              <p class="mb-1">Publisher: <%= book.publisher %></p>
              <small class="text-muted">
                <a href="<%= book.info_link %>" >Learn more here!</a>
              </small>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="row" style="margin-top: 10px !important;">
    <%= render "shared/pagination" %>
  </div>
  <% end %>
</div>

